# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text eol=lf
*.pyi text eol=lf

# Configuration files
*.yml text eol=lf
*.yaml text eol=lf
*.toml text eol=lf
*.json text eol=lf
*.md text eol=lf

# Lock files
*.lock text eol=lf

# Shell scripts
*.sh text eol=lf

# Environment files
.env text eol=lf
.gitignore text eol=lf
